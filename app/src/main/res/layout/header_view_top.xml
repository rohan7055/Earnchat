<?xml version="1.0" encoding="utf-8"?>
<com.rohan7055.earnchat.celgram.collapsingToolbar.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <TextView
            android:id="@+id/contact_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_view_end_text_size"
            android:layout_toLeftOf="@+id/editgroup" />

        <TextView
            android:id="@+id/creation_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/contact_group_name"
            android:layout_toLeftOf="@+id/editgroup" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/editgroup"
            android:visibility="visible"
            android:src="@drawable/ic_pencil"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_alignTop="@+id/contact_group_name" />

    </RelativeLayout>



</com.rohan7055.earnchat.celgram.collapsingToolbar.HeaderView>