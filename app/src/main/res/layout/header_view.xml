<?xml version="1.0" encoding="utf-8"?>
<com.rohan7055.earnchat.celgram.collapsingToolbar.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/contact_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_view_start_text_size"
            android:layout_toLeftOf="@+id/edit_group" />

        <TextView
            android:id="@+id/creation_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/contact_group_name"
            android:layout_toLeftOf="@+id/edit_group" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/edit_group"
            android:visibility="visible"
            android:src="@drawable/ic_pencil"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_alignBottom="@+id/creation_details" />

    </RelativeLayout>

</com.rohan7055.earnchat.celgram.collapsingToolbar.HeaderView>