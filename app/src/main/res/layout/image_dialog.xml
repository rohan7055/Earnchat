<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/themeSecondary"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:srcCompat="@drawable/ic_person"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/iv_dialog"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dialog"
            android:background="@color/black_overlay"
            android:text="xyz"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_alignLeft="@+id/iv_dialog"
            android:layout_alignStart="@+id/iv_dialog"
            android:layout_alignEnd="@+id/iv_dialog"
            android:layout_alignRight="@+id/iv_dialog"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:alpha="0.7"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignStart="@+id/iv_dialog"
            android:layout_alignLeft="@+id/iv_dialog"
            android:layout_below="@+id/iv_dialog"
            android:layout_alignEnd="@+id/iv_dialog"
            android:layout_alignRight="@+id/iv_dialog"
            android:background="#fff">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_msg"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="center"
                android:paddingBottom="12dp"
                android:id="@+id/iv_chat"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_call"
                android:layout_weight="1"
                android:id="@+id/iv_call"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="center"
                android:paddingBottom="12dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/info"
                android:layout_gravity="center"

                android:id="@+id/iv_info"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>