<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.surender.chikoopapp.com.admybrand.chat8.Login"
    android:background="@color/textColor">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@color/textColor"
        android:id="@+id/linearLayout4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:hint="Enter your Name"
            android:textColorHint="@color/hintColor"
            android:backgroundTint="@color/hintColor"
            android:textColor="@color/FiledTextColor"
            android:drawableLeft="@drawable/text_icon2"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:id="@+id/name"
            android:maxLength="20"
            android:inputType="textCapSentences|textPersonName"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:hint="Enter your Email ID"
            android:textColorHint="@color/hintColor"
            android:backgroundTint="@color/hintColor"
            android:textColor="@color/FiledTextColor"
            android:drawableLeft="@drawable/text_icon4"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:id="@+id/emailid"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:hint="Enter 10 digit Mobile No."
            android:textColorHint="@color/hintColor"
            android:backgroundTint="@color/hintColor"
            android:textColor="@color/FiledTextColor"
            android:drawableLeft="@drawable/text_icon1"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:maxLength="10"
            android:inputType="number"
            android:id="@+id/contact"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"
            android:hint="Enter your Message"
            android:backgroundTint="@color/hintColor"
            android:textColor="@color/FiledTextColor"
            android:textColorHint="@color/hintColor"
            android:drawablePadding="10dp"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:id="@+id/message"

            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true" />

    </LinearLayout>


</RelativeLayout>
