<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topBar"
        layout="@layout/custome_actionbar8"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

<RelativeLayout
    android:layout_below="@+id/topBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/contactbox"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/contact_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            app:srcCompat="@drawable/phonebook"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name"
            android:id="@+id/name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/ThemeColor"
            android:layout_toEndOf="@+id/contact_img"
            android:layout_toRightOf="@+id/contact_img" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:elevation="5dp"
        android:background="#ffffff"
        android:layout_below="@+id/contactbox">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@id/image"
            app:srcCompat="@drawable/dialer1"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="8585010365"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/ThemeColor"
            android:id="@+id/number"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ThemeColor"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="cancel"
            android:textColor="@android:color/white"
            android:id="@+id/button"
            android:background="@color/ThemeColor"
            android:layout_weight="0.5"
         />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#fff"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Send"
            android:id="@+id/button2"
            android:textColor="@android:color/white"
            android:background="@color/ThemeColor"
            android:layout_weight="0.5"
            />

    </LinearLayout>

</RelativeLayout>
    </RelativeLayout>
